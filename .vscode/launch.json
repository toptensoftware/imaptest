    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "restart": true,
            "runtimeExecutable": "nodemon"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                //"list", "CAL_=jJhou74Up_czMwoHJ27KSkTgt7fatFyuYpZutgvTfu_tZg@mail.gmail.com"
                //"snapshot", "--restore", "1"
                "-a", "tts", "list", "Sent", "--detail", "3"
            ],
            "program": "${workspaceFolder}\\convtool.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Test Suite",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\TestSync.js"
            //"program": "${workspaceFolder}\\TestConversations.js"
            //"program": "${workspaceFolder}\\TestMailboxView.js"
        }
    ]
}