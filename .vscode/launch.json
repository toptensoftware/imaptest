    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                //"list", "CAL_=jJhou74Up_czMwoHJ27KSkTgt7fatFyuYpZutgvTfu_tZg@mail.gmail.com"
                //"snapshot", "--restore", "1"
                "trim"
            ],
            "program": "${workspaceFolder}\\sandbox.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Test Suite",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\TestConversations.js"
            //"program": "${workspaceFolder}\\TestMailboxView.js"
        },
        {            
            "type": "pwa-node",            
            "request": "launch",            
            "name": "Mocha all tests",            
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",            
            "args": [           
               "--no-timeouts",     
               "${workspaceRoot}/test/messageSync.js"            
            ],            
            "cwd": "${workspaceRoot}",   
            "internalConsoleOptions": "openOnSessionStart"        
         }    
    ]
}