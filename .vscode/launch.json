{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Sandbox",
            "program": "${workspaceFolder}/sandbox.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Run ConvTool",
            "program": "${workspaceFolder}/tools/convtool.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/tools",
            "type": "node",
            //"args": [ "list", "--detail", "3", "Archive" ]
            "args": [ "fetch", "919dd807b151e3db8b6359df8af28cc5@rocketskeleton.com"]
        },
        {
            "name": "Run IMAPTool",
            "program": "${workspaceFolder}/tools/imaptool.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/tools",
            "type": "node",
            //"args": [ "list", "--detail", "3", "Archive" ]
            "args": [ "-a", "tts", "catalog", "--mailbox", "Archive" ]
        },
        {
            "name": "API Server",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/server.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch", "..\\lib", "--watch", ".",
            ],
            "cwd": "${workspaceFolder}/server",
            "env": {
                "NODE_ENV": "development",
            },
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Vue Server",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/client",
            "console": "internalConsole",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Debug Browser",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client"
        },
    ],
    "compounds": [
        {
            "name": "API and Vue Servers",
            "configurations": ["Vue Server", "API Server",  "Debug Browser"],
            "stopAll": true,
        }
    ]
}